<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Set</title>

  <!-- Link to main stylesheet -->
  <link rel="stylesheet" href="/css/theme.css" />
</head>
<body>

  <!-- Reusable navbar partial -->
  <%- include('partials/navbar', { page: '/lego/addSet' }) %>

  <div class="container mt-5">
    <h1>Add a New Lego Set !</h1>

    <!-- 
      Lego Set Form
      This form submits data to /lego/addSet using POST.
      The data is handled in server.js, and will call legoData.addSet().
    -->
    <form action="/lego/addSet" method="POST">

      <!-- Set Name Input -->
      <label style="color:rgb(255,213,157);" for="name">Set Name</label>
      <input 
        style="color: darkred; font-weight: bold;"
        name="name" 
        type="text" 
        id="name" 
        placeholder="e.g. Hogwarts Express" 
        required 
      />

      <!-- Year Input -->
      <label style="color:rgb(255,213,157);" for="year">Year</label>
      <input 
        style="color: darkred; font-weight: bold;"
        name="year" 
        type="number" 
        id="year" 
        placeholder="e.g. 2022" 
        required 
      />

      <!-- Number of Parts Input -->
      <label style="color:rgb(255,213,157);" for="num_parts">Number of Parts</label>
      <input 
        style="color: darkred; font-weight: bold;"
        name="num_parts" 
        type="number" 
        id="num_parts" 
        placeholder="e.g. 1234" 
        required 
      />

      <!-- Image URL Input -->
      <label style="color:rgb(255,213,157);" for="img_url">Image URL</label>
      <input 
        style="color: darkred; font-weight: bold;"
        name="img_url" 
        type="url" 
        id="img_url" 
        placeholder="Paste a valid image link" 
        required 
      />

      <!-- Theme Dropdown (Populated dynamically from themes array) -->
      <label style="color:rgb(255,213,157);" for="theme_id">Theme</label>
      <select style="color: rgb(211, 51, 51); font-weight: bold; text-transform: uppercase;" name="theme_id" id="theme_id" required>
        <% themes.forEach(theme => { %>
          <option value="<%= theme.id %>"><%= theme.name %></option>
        <% }) %>
      </select>

      <!-- Set Number Input (Unique ID for each set) -->
      <label style="color:rgb(255,213,157);" for="set_num">Set Number</label>
      <input 
        style="color: darkred; font-weight: bold;"
        name="set_num" 
        type="text" 
        id="set_num" 
        placeholder="e.g. 76405" 
        required 
      />

      <!-- Submit Button -->
      <button type="submit">Add Set</button>
    </form>
  </div>

</body>
</html>
