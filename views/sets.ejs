<!DOCTYPE html>
<html>
<head>
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/theme.css" />
</head>
<body>
  <%- include('partials/navbar', { page: '/lego/sets' }) %>

  <h1>Lego Collection</h1>

  <p>Filter by theme: 
    <a href="/lego/sets?theme=technic">Technic</a> | 
    <a href="/lego/sets?theme=classic">Classic</a> | 
    <a href="/lego/sets">All</a>
  </p>

  <table border="1">
    <thead>
      <tr>
        <th>Image</th><th>Name</th><th>Theme</th><th>Year</th><th>Parts</th><th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% sets.forEach(set => { %>
        <tr>
          <td><img src="<%= set.img_url %>" width="100" /></td>
          <td><%= set.name %></td>
          <td><a href="/lego/sets?theme=<%= set.theme %>"><%= set.theme %></a></td>
          <td><%= set.year %></td>
          <td><%= set.num_parts %></td>
          <td><a href="/lego/sets/<%= set.set_num %>">Details</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
